<div class="signup-wrapper">
  <div class="signup-container">
    <div class="row">
      <div class="signup-form-box col-xs-6 col-xs-offset-3">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <%= f.input :email, label: false, required: false, placeholder: 'Email Address',autofocus: true %>
          <%= f.input :password, label: false, required: false, placeholder: 'Password',required: true %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
        <% end %>
        <p>or</p>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
