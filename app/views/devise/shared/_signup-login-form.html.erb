<div id="signup-login-form" class="form">
  <ul class="tab-group">
    <li class="tab <%= params[:active_tab] == 'signup' ? 'active' : '' %>"><a href="#signup">Sign Up</a></li>
    <li class="tab <%= params[:active_tab] == 'login' ? 'active' : '' %>"><a href="#login">Log In</a></li>
  </ul>

  <div class="main-login tab-content">
    <div id="signup" style="<%= params[:active_tab] == 'login' ? 'display: none' : '' %>">
      <h1>Sign Up for Free</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>

      <div class="top-row">
        <div class="field-wrap">
          <%= f.input :first_name, validate: { presence: true, uniqueness: false } %>
        </div>

        <div class="field-wrap">
          <%= f.input :last_name, validate: { presence: true, uniqueness: false } %>
        </div>
      </div>

      <div class="field-wrap">
        <%= f.input :email, validate: true %>
      </div>

      <div class="field-wrap">
        <%= f.input :password, validate: true %>
      </div>

      <div class="field-wrap">
        <%= f.input :password_confirmation, validate: true  %>
      </div>
      <%= f.button :submit, "Sign Up", class: "button button-block" %>
      <% end %>

    </div>

    <div id="login" style="<%= params[:active_tab] == 'login' ? 'display: block' : '' %>">
      <h1>Welcome Back!</h1>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), validate: true, html: { id: :login_user }) do |f| %>

      <div class="field-wrap">
        <%= f.input :email, input_html: { id: :user_email, data_validate: :true },  validate: true %>
      </div>

      <div class="field-wrap">
        <%= f.input :password, input_html: { id: :user_password2 }%>
      </div>

      <p class="forgot"><a href="#">Forgot Password?</a></p>

      <%= f.button :submit, "Log In", class: "button button-block" %>

      <% end %>

    </div>

  </div><!-- tab-content -->

</div> <!-- /form -->
