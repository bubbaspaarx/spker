<%= render 'shared/invite-message-modal' %>
<div class="big-container">
  <div class="profile-container">
    <div class="profile">
      <h1> <%= @user.first_name %> <%= @user.last_name %></h1>
      <div class="infoHolder">
        <h2><%= @user.job_title %></h2>
        <p><%= @user.city %></p>
        <p><%= @user.speaker_blurb %></p>
        <ul class="list-inline">
          <% @user.user_tags.each do |tag| %>
          <li><%= tag.category.name %></li>
          <% end %>
        </ul>
        <ul class="list-inline">
          <li><a href="<%= @user.facebook %>"><h5>Facebook <i class="fab fa-facebook-square"></i></h5></a></li>
          <li><a href="<%= @user.twitter %>"><h5>Twitter <i class="fab fa-twitter-square"></i></h5></a></li>
          <li><a href="<%= @user.linkedin %>"><h5>LinkedIn <i class="fab fa-linkedin"></i></h5></a></li>
        </ul>
      </div>

      <div class="imageHolder">
        <% image = @user.photo.url ? @user.photo.url : "http://res.cloudinary.com/montycat/image/upload/v1520001176/profile-placeholder.png" %>
        <div class="profilePic" style="background-image: url('<%= cl_image_path image %>')">
        </div>
      </div>
    </div>
  </div>
  <div class="speaker-wrapper">
    <div class="row speaker-show-image">
      <div class="speaker-banner-wrapper">
        <div class="speaker-button">
            <%= link_to 'Send message', new_user_message_path(@user)%>
        </div>
        <div class="speaker-cost">
          <h4>Fee from Â£ <%= @user.cost.to_i %></h4>
        </div>
        <div class="speaker-button">
          <a data-button="login-form" data-toggle="modal" data-target="#invite_modal">Request booking</a>
        </div>
      </div>
    </div>
  </div>
</div>




