
<div class="speaker-profile-wrapper">
  <div class="left-side-wrapper">
    <div class="speaker-avatar-profile">
      <div class="speaker-avatar">
        <% image = current_user.photo.url ? current_user.photo : "http://res.cloudinary.com/montycat/image/upload/v1520001176/profile-placeholder.png" %>
        <%= cl_image_tag image, class: "message-avatar", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <%= render 'shared/photo-loader' %>
      </div>
    </div>
    <ul>
      <li>
        <p><%= @user.first_name %>  <%= @user.last_name %></p>
      </li>
      <li>
        <p>job description</p>
      </li>
      <li>
        <%= link_to 'Send message', new_user_message_path(@user), class: 'btn btn-primary' %>
      </li>
    </ul>
  </div>
  <div class="speaker-profile-container">
    <div class="speaker-carousel">
      <%= render 'shared/user-carousel' %>
    </div>
    <div class="speaker-skills">
      <h1 class="text-center">Speakers skills</h1>
      <p>skill 1</p>
      <p>skill 2</p>
      <p>skill 3</p>
      <p>skill 4</p>
      <p>skill 5</p>
    </div>
    <div class="speaker-previous-events">
      <h1 class="text-center">Previous Events</h1>
      <ul class="list-inline">
      <% 4.times do %>
        <% event = Event.all.sample %>
        <li><%= render 'shared/card', event: event %></li>
      <% end %>
      </ul>
    </div>

  </div>
  <div class="right-side-wrapper">
    <div class="speaker-bio-profile">
      <h1 class="text-center">Biography</h1>
      <p class="text-justify">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ullam fugit laudantium dicta modi aliquid harum quidem nostrum atque corporis dolorum. Aspernatur doloremque dolores exercitationem, vel suscipit omnis non officiis enim.</p>
    </div>
    <div class="speaker-profile-social-media">
      <ul>
        <li><i class="fab fa-facebook-square"></i></li>
        <li><i class="fab fa-twitter-square"></i></li>
        <li><i class="fab fa-instagram"></i></li>
        <li><i class="fab fa-pinterest-square"></i></li>
      </ul>
    </div>
  </div>
</div>
