<%= render 'shared/filter-searchbar' %>
<h4 id="index-header" class="text-center">Choose the perfect speaker for your event in <%= params[:location] %></h4>
<div class="container fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="container">
        <hr>
        <div class="row">
          <% @users.each do |user| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= link_to user_speaker_path(user) do %>
            <div class="card" style="background-image: url('https://assets.bwbx.io/images/users/iqjWHBFdfxIU/iLZ.fSzVvwvs/v0/600x-1.jpg')">
              <div class="description text-center">
                <p><%= user.first_name %> <%= user.last_name %></p>
                <p><%= humanized_money_with_symbol(user.cost)%> per hour</p>
                <p><%= user.city %></p>
                <p><%= user.cost %></p>
              </div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




