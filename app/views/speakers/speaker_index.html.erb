
<div class="main-container">
  <div class="body-container">
    <%= render 'shared/filter-searchbar' %>
    <div class="card-container">
      <div class="events-title">
        <h4 id="index-header">Choose the perfect speaker for your event in <%= params[:location] %></h4>
      </div>
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
          <%= render 'shared/speaker_card', user: user%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="map-container">
    <%= render 'shared/map-vertical' %>
  </div>
</div>
