
<div class="message-container">
  <div id="new-message">
    <%= link_to 'Send a message', messages_ajax_user_path(@correspondent), class: 'btn btn-primary', id:'message-btn', remote: true %>
  </div>
  <div id="refresh">
    <%= link_to 'Refresh', inbox_users_path(@user, @correspondent), class: 'btn btn-success', remote: true  %>
  </div>
  <div id="message-list">
    <% @messages.reverse_order.each do |message| %>
      <%= render 'shared/message', {message: message} %>
    <% end %>
  </div>
</div>
