<!-- Trigger/Open The Modal -->
<button id="myBtn">Open Modal</button>
<div class="background-banner-overlay">

  <div id="myModal" class="modal">

    <div class="modal-content1">
      <span class="close">&times;</span>
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: 'Email Address', required: false, autofocus: true %>
        <%= f.input :password, label: false, placeholder: 'Password', required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <% end %>

      <a id='forgot_password' href="/users/password/new">Forgot your password?</a>

      <a id='sign_up-link' href="/users/sign_up">Sign up</a>
    </div>

  </div>
</div>
