<div class="message-row">
  <div class="message">
    <div class="message-info sent">
      <% image = message.sender.photo.url ? message.sender.photo : "http://res.cloudinary.com/montycat/image/upload/v1520001176/profile-placeholder.png" %>
      <%= cl_image_tag image, class: "message-avatar" %>
      <div class="message-name">
        <h3><%= message.sender.first_name %> <%= message.sender.last_name %></h3>
        <p><%= message.created_at.strftime('%d/%m/%Y at %H:%M') %></p>
      </div>
    </div>
    <div class="message-body">
      <p class="sent"><strong><%= message.content %></strong></p>
    </div>
  </div>
</div>
