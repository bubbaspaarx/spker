
<div class="message-container">
  <div id="new-message">
    <%= link_to 'Send a message', messages_ajax_user_path(user), class: 'btn btn-primary', id:'message-btn', remote: true %>
  </div>
  <% @messages.each do |message| %>
  <div class="row">
    <div class="message">
      <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan" style="width:70px;height:70px;border-radius: 50px">
      <div class="message-name">
        <h3><%= message.sender.email %></h3>
        <p><%= message.created_at %></p>
      </div>
      <div class="message-body">
        <p><strong><%= message.content %></strong></p>
      </div>
      <div class="message-status">
        <p class="status pending">Pending</p>
        <p class="price">â‚¬345</p>
      </div>
    </div>
  </div>
  <% end %>
</div>





